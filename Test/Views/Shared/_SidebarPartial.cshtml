<div>
    <a href="#" class="list-group-item active sidebar">
        <span class="fa fa-certificate" area-hidden="true"></span>
        &nbsp; Hot News
    </a>
    <ul class="list-group">
        @{
            if (ViewBag.news != null)
            {
                foreach (var post in ViewBag.news)
                {
                    <li class="list-group-item">
                        <a href="@Url.Action("ViewPost","News", new { id = post.postId })">
                            <img src="../../Images/@post.image" class="img-fluid">
                            <p class="news-title">@post.title</p>
                        </a>
                    </li>
                }
            }
        }
    </ul>
</div>
